{
  "name": "prj-warehosue-manager-backend",
  "version": "1.1.0",
  "engines": {
    "node": "14.15.4",
    "npm": "6.14.10"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "node -r source-map-support/register .",
    "dev": "nodemon",
    "dev:test": "npm run build:test && npm run start",
    "migrate": "npm run build && node ./dist/migrate",
    "test:unit": "npm run build && lb-mocha --allow-console-logs \"dist/__tests__/unit\"",
    "test:unit:coverage": "npm run build && nyc lb-mocha --allow-console-logs \"dist/__tests__/unit\"",
    "build": "lb-tsc",
    "build:test": "lb-tsc -p tsconfig.test.json",
    "clean": "lb-clean dist *.tsbuildinfo .eslintcache",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix"
  },
  "dependencies": {
    "@loopback/authentication": "^7.0.2",
    "@loopback/authentication-jwt": "^0.7.2",
    "@loopback/authorization": "^0.7.2",
    "@loopback/boot": "^3.0.2",
    "@loopback/context": "^3.12.0",
    "@loopback/core": "^2.11.0",
    "@loopback/openapi-v3": "^5.0.0",
    "@loopback/repository": "^3.1.0",
    "@loopback/rest": "^8.0.0",
    "@loopback/rest-explorer": "^3.0.2",
    "@loopback/service-proxy": "^3.0.2",
    "@types/multer": "^1.4.7",
    "@types/uuid": "^8.3.3",
    "aws-sdk": "^2.953.0",
    "axios": "^0.23.0",
    "bcryptjs": "^2.4.3",
    "cookie": "^0.4.0",
    "dotenv": "^8.2.0",
    "ejs": "^3.0.2",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "loopback-connector-postgresql": "^5.2.0",
    "multer": "^1.4.4",
    "nodemailer": "^6.4.6",
    "parser": "^0.1.4",
    "uuid": "^8.3.2",
    "qs": "^6.10.1",
    "socket.io": "^4.1.3",
    "validator": "^11.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.0",
    "@commitlint/config-conventional": "^12.0.0",
    "@loopback/build": "^6.2.5",
    "@loopback/eslint-config": "^10.0.1",
    "@loopback/testlab": "^3.2.8",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie": "^0.3.3",
    "@types/ejs": "^3.0.2",
    "@types/helmet": "0.0.45",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/lodash": "^4.14.149",
    "@types/luxon": "^1.25.1",
    "@types/node": "^10.17.37",
    "@types/nodemailer": "^6.4.0",
    "@types/validator": "^10.11.3",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "eslint": "^7.10.0",
    "husky": "^3.1.0",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "socket.io-client": "^4.1.3",
    "source-map-support": "^0.5.19",
    "typescript": "~4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "commitlint --verbose -E HUSKY_GIT_PARAMS"
    }
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "src",
      ".env"
    ],
    "ext": "ts",
    "exec": "npm run build && npm start"
  }
}
